<Window x:Class="GUI.View.DeleteDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Confirmation" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Are you sure you want to delete this department?" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Yes" Width="80" Margin="5" Padding="8 4" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="Yes_Click"/>
                <Button Content="No" Width="80" Margin="5" Padding="8 4" Background="#F44336" Foreground="White" BorderBrush="#F44336" BorderThickness="1" Click="No_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>