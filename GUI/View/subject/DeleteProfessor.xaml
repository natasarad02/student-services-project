<Window x:Class="GUI.View.DeleteProfessorFromSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ns="clr-namespace:StudentskaSluzba.GUI.Localization"
        Title="Delete Confirmation" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Are you sure you want to delete this professor?" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Yes" Width="80" Margin="5" Click="Yes_Click"/> <!-- Click="Yes_Click"/>-->
                <Button Content="No" Width="80" Margin="5" Click="No_Click"/> <!-- Click="No_Click"/> -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>