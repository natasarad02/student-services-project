<Window x:Class="GUI.View.DeleteProfessorFromSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ns="clr-namespace:GUI.Localization"
        Title="{ns:Loc DeleteConfirmation}" Height="150" Width="300"  KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{ns:Loc delProf}" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="{ns:Loc Yes}" Width="80" Margin="5" Click="Yes_Click"/> <!-- Click="Yes_Click"/>-->
                <Button Content="{ns:Loc No}" Width="80" Margin="5" Click="No_Click"/> <!-- Click="No_Click"/> -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>