<Window x:Class="GUI.View.DeleteProfessorFromSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ns="clr-namespace:GUI.Localization"
        Title="{ns:Loc DeleteConfirmation}" Height="150" Width="300" KeyDown="Window_KeyDown">
    <Grid>
        <Border BorderBrush="DarkGray" BorderThickness="1" Background="White" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                <TextBlock Text="{ns:Loc Confirmation}" FontWeight="Bold" FontSize="16" Margin="0 0 0 10" HorizontalAlignment="Center"/>
                <TextBlock Text="{ns:Loc delProf}" Margin="5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Content="{ns:Loc Yes}" Width="80" Margin="5" Padding="8 4" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="Yes_Click"/>
                    <Button Content="{ns:Loc No}" Width="80" Margin="5" Padding="8 4" Background="#E67E22" Foreground="White" BorderBrush="#E67E22" BorderThickness="1" Click="No_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
