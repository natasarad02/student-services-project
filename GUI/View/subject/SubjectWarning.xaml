<Window x:Class="GUI.View.SubjectWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ns="clr-namespace:GUI.Localization"
        Title="{ns:Loc SubjectDeletionWarning}" Height="215" Width="300"  KeyDown="Window_KeyDown">
    <Grid>
        <Border BorderBrush="DarkGray" BorderThickness="1" Background="LightGray" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                <TextBlock Text="{ns:Loc Warning}" FontWeight="Bold" FontSize="16" Margin="0 0 0 10" HorizontalAlignment="Center"/>
                <TextBlock Text="{ns:Loc cannotBe}" Margin="0 0 10 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock Text="{ns:Loc enrolled}" Margin="0 0 10 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock Text="{ns:Loc reasign}" Margin="0 0 0 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <Button Content="{ns:Loc Ok}" Width="80" Margin="5" Padding="8 4" Background="#2196F3" Foreground="White" BorderBrush="#2196F3" BorderThickness="1" Click="OK_Click"/> <!-- /> -->
            </StackPanel>
        </Border>
    </Grid>
</Window>