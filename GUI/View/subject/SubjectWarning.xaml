<Window x:Class="GUI.View.SubjectDeletionNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subject Deletion Warning" Height="200" Width="300">
    <Grid>
        <Border BorderBrush="DarkGray" BorderThickness="1" Background="LightGray" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                <TextBlock Text="Warning" FontWeight="Bold" FontSize="16" Margin="0 0 0 10" HorizontalAlignment="Center"/>
                <TextBlock Text="This subject cannot be deleted." Margin="0 0 10 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock Text="There are students enrolled in this subject." Margin="0 0 10 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock Text="Please reassign students or remove them from this subject before deleting." Margin="0 0 0 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
				<Button Content="OK" Width="80" Margin="5" Padding="8 4" Background="#2196F3" Foreground="White" BorderBrush="#2196F3" BorderThickness="1"/> <!-- Click="OK_Click"/> -->
            </StackPanel>
        </Border>
    </Grid>
</Window>