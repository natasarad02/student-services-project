<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel Margin="0,0,0,383">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" ></MenuItem>
                <MenuItem Header="Save" ></MenuItem>
                <MenuItem Header="Open" >
                    <MenuItem Header="Students" ></MenuItem>
                    <MenuItem Header="Subjects" ></MenuItem>
                    <MenuItem Header="Professors" ></MenuItem>
                    <MenuItem Header="Departments" ></MenuItem>
                </MenuItem>
                <MenuItem Header="Close" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Update"></MenuItem>
                <MenuItem Header="Delete"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top" Height="27">
            <Button Content="Add"/>
            <Button Content="Edit"/>
            <Button Content="Delete"/>
            <TextBox HorizontalAlignment="Left" Width="140"/>
            <Button HorizontalAlignment="Right" Content="Search"/>
        </ToolBar>
    </DockPanel>
</Window>
